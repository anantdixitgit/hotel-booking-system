<%layout("/layouts/boilerplate")%>


<body>
  <div class="container mt-4">
    <div class="row justify-content-center">
      <div class="col-lg-8 col-md-10">
        <div class="card shadow-sm" style="width: 90%; margin: 0 auto">
          <img
            src="<%= listing.image %>"
            class="card-img-top"
            style="height: 400px; object-fit: cover"
            alt="<%= listing.title %>"
          />
          <div class="card-body">
            <h3 class="card-title mb-4"><%= listing.title %></h3>

            <div class="listing-details mb-4">
              <h5>Listing Details:</h5>
              <ul class="list-unstyled">
                <li class="mb-2">
                  <strong>Description:</strong> <%= listing.description %>
                </li>
                <li class="mb-2">
                  <strong>Price:</strong> â‚¹<%=
                  listing.price.toLocaleString("en-IN") %>/night
                </li>
                <li class="mb-2">
                  <strong>Location:</strong> <%= listing.location %>
                </li>
                <li class="mb-2">
                  <strong>Country:</strong> <%= listing.country %>
                </li>
              </ul>
            </div>

            <div class="d-flex justify-content-between mt-4">
              <a href="/listing/<%=listing._id%>/edit" class="btn btn-primary"
                >Edit Details</a
              >
              <form method="POST" action="/listing/<%=listing._id%>?_method=DELETE">
                <button class="btn btn-danger">Delete Listing</button>
              </form>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <style>
    .card {
      border-radius: 15px;
      overflow: hidden;
    }
    .card-img-top {
      object-position: center;
    }
    .listing-details {
      background-color: #f8f9fa;
      padding: 1.5rem;
      border-radius: 10px;
    }
    .btn {
      padding: 0.5rem 1.5rem;
      font-weight: 500;
    }
  </style>
</body>
